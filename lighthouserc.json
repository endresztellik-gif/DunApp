{
  "ci": {
    "collect": {
      "numberOfRuns": 3,
      "startServerCommand": "npm run preview",
      "startServerReadyPattern": "Local.*:4173",
      "url": [
        "http://localhost:4173/",
        "http://localhost:4173/?module=meteorology",
        "http://localhost:4173/?module=water-level",
        "http://localhost:4173/?module=drought"
      ],
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        },
        "chromeFlags": "--no-sandbox --disable-gpu"
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:performance": [
          "error",
          {
            "minScore": 0.85,
            "aggregationMethod": "median"
          }
        ],
        "categories:accessibility": [
          "error",
          {
            "minScore": 0.95,
            "aggregationMethod": "median"
          }
        ],
        "categories:best-practices": [
          "error",
          {
            "minScore": 0.90,
            "aggregationMethod": "median"
          }
        ],
        "categories:seo": [
          "error",
          {
            "minScore": 0.95,
            "aggregationMethod": "median"
          }
        ],
        "categories:pwa": [
          "warn",
          {
            "minScore": 0.90,
            "aggregationMethod": "median"
          }
        ],
        "first-contentful-paint": [
          "error",
          {
            "maxNumericValue": 1500,
            "aggregationMethod": "median"
          }
        ],
        "largest-contentful-paint": [
          "error",
          {
            "maxNumericValue": 2500,
            "aggregationMethod": "median"
          }
        ],
        "interactive": [
          "error",
          {
            "maxNumericValue": 3500,
            "aggregationMethod": "median"
          }
        ],
        "speed-index": [
          "warn",
          {
            "maxNumericValue": 3400,
            "aggregationMethod": "median"
          }
        ],
        "total-blocking-time": [
          "warn",
          {
            "maxNumericValue": 300,
            "aggregationMethod": "median"
          }
        ],
        "cumulative-layout-shift": [
          "error",
          {
            "maxNumericValue": 0.1,
            "aggregationMethod": "median"
          }
        ],
        "max-potential-fid": [
          "warn",
          {
            "maxNumericValue": 130,
            "aggregationMethod": "median"
          }
        ],
        "resource-summary:script:size": [
          "warn",
          {
            "maxNumericValue": 300000,
            "aggregationMethod": "median"
          }
        ],
        "resource-summary:stylesheet:size": [
          "warn",
          {
            "maxNumericValue": 50000,
            "aggregationMethod": "median"
          }
        ],
        "resource-summary:image:size": [
          "warn",
          {
            "maxNumericValue": 200000,
            "aggregationMethod": "median"
          }
        ],
        "resource-summary:total:size": [
          "warn",
          {
            "maxNumericValue": 500000,
            "aggregationMethod": "median"
          }
        ],
        "unused-javascript": [
          "warn",
          {
            "maxNumericValue": 100000,
            "aggregationMethod": "median"
          }
        ],
        "unused-css-rules": [
          "warn",
          {
            "maxNumericValue": 20000,
            "aggregationMethod": "median"
          }
        ],
        "modern-image-formats": "warn",
        "offscreen-images": "warn",
        "render-blocking-resources": "warn",
        "unminified-css": "error",
        "unminified-javascript": "error",
        "efficient-animated-content": "warn",
        "uses-text-compression": "error",
        "uses-responsive-images": "warn",
        "uses-optimized-images": "warn",
        "uses-webp-images": "warn",
        "uses-rel-preconnect": "warn",
        "font-display": "warn",
        "dom-size": [
          "warn",
          {
            "maxNumericValue": 1500,
            "aggregationMethod": "median"
          }
        ],
        "color-contrast": "error",
        "meta-viewport": "error",
        "document-title": "error",
        "html-has-lang": "error",
        "service-worker": "warn",
        "works-offline": "warn",
        "viewport": "error",
        "without-javascript": "warn",
        "splash-screen": "warn",
        "themed-omnibox": "warn",
        "content-width": "error",
        "installable-manifest": "warn",
        "apple-touch-icon": "warn",
        "pwa-cross-browser": "warn",
        "pwa-page-transitions": "warn",
        "pwa-each-page-has-url": "warn"
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    },
    "server": {},
    "wizard": {}
  }
}
