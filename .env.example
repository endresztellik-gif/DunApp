# DunApp PWA - Environment Variables Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
# Get these from your Supabase project dashboard:
# https://app.supabase.com/project/YOUR_PROJECT/settings/api

VITE_SUPABASE_URL=https://your-project-ref.supabase.co
VITE_SUPABASE_ANON_KEY=your_anon_key_here

# Service role key (for Edge Functions only, NEVER expose to frontend!)
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# ============================================================================
# METEOROLOGY API KEYS
# ============================================================================

# OpenWeatherMap (Primary source for current weather)
# Get your API key from: https://home.openweathermap.org/api_keys
# IMPORTANT: Replace with your actual API key!
# Fallback: Yr.no (no API key required)
OPENWEATHER_API_KEY=your_openweather_api_key_here

# ============================================================================
# PUSH NOTIFICATION VAPID KEYS
# ============================================================================
# Generate VAPID keys with: npx web-push generate-vapid-keys
# Or use: https://vapidkeys.com/

VITE_VAPID_PUBLIC_KEY=your_vapid_public_key_here
VAPID_PRIVATE_KEY=your_vapid_private_key_here
VAPID_SUBJECT=mailto:your-email@example.com

# ============================================================================
# OPTIONAL API KEYS
# ============================================================================

# Yr.no API (Free, no key required, but User-Agent header needed)
# Just provide a contact email or URL for the User-Agent header
YR_NO_USER_AGENT=DunApp PWA/1.0 (contact@dunapp.hu)

# ScrapingBee (Optional, for complex scraping tasks)
# Get your API key from: https://www.scrapingbee.com/
SCRAPINGBEE_API_KEY=your_scrapingbee_key_here

# ============================================================================
# DEVELOPMENT FLAGS
# ============================================================================

# Set to 'development' or 'production'
NODE_ENV=development

# Enable debug logging
DEBUG=true

# Mock data for testing (set to true to use mock data instead of real APIs)
USE_MOCK_DATA=false

# ============================================================================
# DEPLOYMENT CONFIGURATION
# ============================================================================

# Netlify site ID (for deployments)
NETLIFY_SITE_ID=your_netlify_site_id

# GitHub repository (for CI/CD)
GITHUB_REPO=your-username/dunapp-pwa

